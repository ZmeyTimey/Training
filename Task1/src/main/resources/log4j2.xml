<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <File name="file" fileName="log.txt">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>

        <File name="file2" fileName="log2.txt">
            <MarkerFilter marker="fileOnly" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout>
                <Pattern>%date{dd.MM.yyyy HH:mm:ss,SSS} %5p %logger
                    %m%n" /></Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="logger" level="debug" additivity="true">
            <AppenderRef ref="file2"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="all">
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>


</Configuration>